<div class="row"><h1>Listado de anuncios</h1></div><br>
<div class="row rb">
  <div class="col-lg-4">
     <div class="input-group">
      <input type="text" class="form-control" placeholder="Buscar">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Buscar</button>
      </span>
    </div><!-- /input-group -->
  </div>
  <div class="col-lg-8">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
          <%= link_to 'Nueva publicación', new_publication_path, :class=>"btn btn-default" %>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Editar</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Eliminar</button>
      </div>
    </div>
  </div>
 
</div><br>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Título</th>
          <th>Dirección</th>
          <th>Descripción</th>
          <th>Imagen</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Precio Final</th>
          <th>Destacado</th>
          <th>Estado</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>

      <tbody>
        <% @publications.each do |publication| %>
          <tr>
            <td><%= publication.title %></td>
            <td><%= publication.direction %></td>
            <td><%= publication.description %></td>
            <td>
            <%= image_tag(publication.image_url, :width => 65, :height => 75) if publication.image.present? %>
            </td>
            <td><%= publication.qt_entrance %></td>
            <td><%= publication.price_entrance %></td>
            <td><%= publication.price_sales %></td>
            <td><%= publication.important %></td>
            <td><%= publication.status %></td>
            <td><%= link_to 'Ver', publication %></td>
            <td><%= link_to 'Editar', edit_publication_path(publication) %></td>
            <td><%= link_to 'Eliminar', publication, method: :delete, data: { confirm: 'Seguro que quiere eliminar?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
