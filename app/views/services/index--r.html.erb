<h1>Lista de Discotecas</h1>

<% @contador=1 %>
<% @articles.each do |article| %>
      <% if @contador == 1 %>
        <div class="row">
        <div class="col-sm-12">
      <% end %>

      <% if @contador <=3 %>
        <div class="col-sm-4">
          <div class="space even-content">
            <div><h3><%= article.title %></h3></div>
            <div>
                <%= image_tag("disco.jpg", :alt => "rss feed", :height =>100, :width => 150, :class =>"") %>
            </div><br>
            <button type="submit" class="btn btn-default">
              Ver detalle discoteca</button>
          </div>
        </div>
      <% end %>

      <% if @contador == 3 %>
      </div>
      </div>
        <% @contador =0 %>
      <% end %>

  <% @contador=@contador +1 %>
<% end %>

