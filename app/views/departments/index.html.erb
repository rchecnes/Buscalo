<h1>Listing departments</h1>

<%= link_to 'New Department', new_department_path, :class=>"btn btn-primary btn-sm" %>
<br>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td><%= department.description %></td>
            <td><%= link_to 'Show', department %></td>
            <td><%= link_to 'Edit', edit_department_path(department) %></td>
            <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
